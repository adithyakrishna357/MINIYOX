<main class="main-wrap">
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Edit Product</h2>

            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3" style="width: 601px;">
                        <form action="/admin/editproduct/<%=product._id%>"  method="post" enctype="multipart/form-data" >
                            <div class="mb-4">
                                <label for="product_name"  class="form-label">Product Name</label>
                                <input type="text"  name="product_name" value="<%=product.product_name%>" class="form-control" id="product_name" />
                            </div>
                            <div class="mb-4">
                                <label for="product_slug"  class="form-label">Description</label>
                                <input type="text" value="<%=product.product_description%>" name="product_description" class="form-control" id="product_slug" />
                            </div>
                            <div class="mb-4">
                                    <label class="form-label" >Category</label>  
                                    <select class="form-select" name="product_category">
                                        <!-- <option><%= product.product_category %></option> -->
                                        <% for (var i=0; i < categorie.length; i++) { %>
                                        <option><%= categorie[i].category_list %></option>
                                        <% } %>
                                    </select>
                                    
                            </div>
                            <div class="mb-4">
                                <label class="form-label" >Price</label>
                                <input type="number" value="<%=product.product_price%>" class="form-control" name="product_price" >
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                    </div>
                    <div class="col-md-9" style="width: 300px; margin-left: 115px;margin-top: 84px;">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Product Image</h4>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label"></label>
                                        <% product.image.forEach((image)=>{%>
                                        <img
                                          src="<%=image %>"
                                          alt=""
                                          style="width: 100px; height: auto"
                                        />
                                        <%})%>
                                    <input class="form-control" type="file" name="image" multiple>
                                </div>
                            </div>
                        </div> <!-- card end// -->
                    </div> <!-- .col// -->
                </form>
                </div> <!-- .row // -->
            </div> <!-- card body .// -->
        </div> <!-- card .// -->
    </section> <!-- content-main end// -->
</main>