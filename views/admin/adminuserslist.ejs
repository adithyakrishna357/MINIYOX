        <table class="table table-hover" id="myTable">
            <thead>
                <tr>

                    <th>Index</th>
                    <th>User Name</th>
                    <th >Email</th>
                    <th >Phone no</th>
                    <th>Block/Unblock</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i=0; i < user.length; i++) { %>
                    <tr>

                        <td>
                            <%= i+1 %>
                        </td>
                        <td><b>
                                <%= user[i].name %>
                            </b></td>
                            <td>
                                <%= user[i].email %>
                            </td>
                            <td>
                                <%= user[i].phone %>
                            </td>
                            <% if (user[i].isblocked) { %>
                            <td>
                                <a href="/admin/blockuser/<%=user[i]._id%>"
                                    class="btn btn-sm font-sm rounded btn-danger" style="margin-left: 70px;">
                                    Unblock
                                </a>
                            </td>
                            <% } else { %>
                                <td>
                                    <a href="/admin/unblockuser/<%=user[i]._id%>"
                                        class="btn btn-sm font-sm rounded btn-danger" style="margin-left: 70px;">
                                        Block
                                    </a>
                                </td>
                            <% } %>
                                    
                    </tr>
                    <% } %>
            </tbody>
        </table>
